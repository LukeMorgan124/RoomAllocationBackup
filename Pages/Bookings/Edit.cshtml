@page
@model RoomAllocation3.Pages.Bookings.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Booking.BookingID" />
            <div class="form-group">
                <label asp-for="Booking.BookingID" class="control-label"></label>
                <div>@Html.DisplayFor(model => model.Booking.BookingID)</div>
            </div>
            <label asp-for="Booking.Courses" class="control-label"></label>
            <select asp-for="Booking.CourseID" class="form-control"
                    asp-items="@Model.CourseNameSL"></select>
            <span asp-validation-for="Booking.CourseID" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="Booking.Teacher.TeacherCode" class="control-label">Teacher Code</label>
                <input asp-for="Booking.Teacher.TeacherCode" class="form-control" />
                <span asp-validation-for="Booking.Teacher.TeacherCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Rooms/Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
