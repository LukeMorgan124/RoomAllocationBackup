@page
@model RoomAllocation3.Pages.Rooms.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Block.BlockName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Block.BlockName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.RoomNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.RoomNumber)
        </dd>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Bookings</th>
                </tr>
                <tr>
                    <th>Day</th>
                    <th>Period</th>
                    <th>Course</th>
                    <th>Teacher</th>
                    <th>Time</th>
                </tr>
                @foreach (var item in Model.Room.Bookings)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DaysOfTheWeek.DayOfTheWeekName)
                        </td>
                        <td>
                            Period
                            @Html.DisplayFor(modelItem => item.Period.PeriodID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Courses.YearLevel)
                            @Html.DisplayFor(modelItem => item.Courses.CourseCode)
                        </td>
                         <td>
                            @Html.DisplayFor(modelItem => item.Courses.TeacherCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Period.PeriodTime)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Room.RoomID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
